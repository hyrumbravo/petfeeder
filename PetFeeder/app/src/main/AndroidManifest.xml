<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <queries>
        <package android:name="com.example.petfinder"/>
        <package android:name="com.example.petfeeder"/>
    </queries>

    <application
        android:name=".Application.PetFeeder"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetFeeder"
        tools:targetApi="31">
        <activity
            android:name=".non_diet"
            android:exported="false" />
        <activity
            android:name=".Diet"
            android:exported="false" />
        <activity
            android:name=".feed"
            android:exported="false" />
        <activity
            android:name=".Bluetooth.Bluetooth"
            android:exported="false" />
        <activity
            android:name=".statistics"
            android:exported="false" />
        <activity
            android:name=".SplashScreen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayPetDetails"
            android:exported="false" />
        <activity
            android:name=".EditPet"
            android:exported="false" />
        <activity
            android:name=".Components.Credits"
            android:exported="false" />
        <activity
            android:name=".Components.About"
            android:exported="false" />
        <activity
            android:name=".AddPet"
            android:exported="false" />
        <activity
            android:name=".DrawerNav"
            android:exported="false" />
        <activity
            android:name=".Components.Dashboard"
            android:exported="false" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <provider
            android:authorities="com.example.petfeeder"
            android:name=".DataSharing.PetFeederContentProvider"
            android:exported="true"/>
    </application>

</manifest>